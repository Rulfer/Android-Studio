<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pewdiederp2"
    tools:context=".HomeActivity" >

    <ImageButton
        android:src="@drawable/uuuuuwat"
        android:id="@+id/openMenu"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:onClick="openMovieMenu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />


    <ImageButton
        android:visibility="gone"
        android:src="@drawable/harold6"
        android:id="@+id/installLauncher"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:paddingBottom="250dp"
        android:onClick="updateLauncher"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/openMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:visibility="gone"
        android:src="@drawable/harold6"
        android:id="@+id/installMovieMenu"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:paddingTop="200dp"
        android:onClick="updateMovieMenu"
        android:layout_above="@+id/installLauncher"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:text="Button"
        android:onClick="displayDownloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="17dp"
        android:id="@+id/button" />
</RelativeLayout>